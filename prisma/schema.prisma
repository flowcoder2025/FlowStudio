// FlowStudio Prisma Schema
// Based on FDP Backend Architect Template
// Customized for AI Image Generation Platform

// ========================================
// Data Source Configuration
// ========================================

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ========================================
// Generator Configuration
// ========================================

generator client {
  provider      = "prisma-client-js"
  // CRITICAL: Include rhel-openssl-3.0.x for Vercel serverless deployment
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

// ========================================
// NextAuth.js Models
// ========================================

// User - Primary user account
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // Business Verification Fields
  businessNumber       String?   @unique // 사업자등록번호 (10자리, 하이픈 제거)
  businessOwnerName    String?            // 담당자 이름
  businessPhone        String?            // 전화번호
  businessVerified     Boolean   @default(false)  // 인증 완료 여부
  businessVerifiedAt   DateTime?          // 인증 완료 시각
  businessBonusClaimed Boolean   @default(false)  // 사업자 보너스 크레딧 지급 여부

  // Referral Fields
  referralCode         String?   @unique // 추천 코드 (8자리 영숫자)
  referredBy           String?            // 추천인 ID (가입 시 입력된 추천 코드의 소유자)

  // Relations
  accounts              Account[]
  sessions              Session[]
  imageProjects         ImageProject[]
  apiKeys               ApiKey[]
  usageStats            UsageStats?
  credit                Credit?
  creditTransactions    CreditTransaction[]
  subscription          Subscription?
  generationHistory     GenerationHistory[]
  referralsGiven        Referral[]        @relation("Referrer")   // 내가 추천한 사람들
  referralsReceived     Referral[]        @relation("Referred")   // 나를 추천한 사람

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([businessNumber])
}

// Account - OAuth provider accounts
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// Session - Active user sessions
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// VerificationToken - Email verification tokens
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ========================================
// FlowStudio Application Models
// ========================================

// ImageProject - AI generated image projects
model ImageProject {
  id           String   @id @default(cuid())
  userId       String
  title        String
  description  String?
  mode         String   // 'CREATE', 'EDIT', 'DETAIL_PAGE', 'DETAIL_EDIT'

  // Generation parameters
  prompt       String?  @db.Text
  category     String?
  style        String?
  aspectRatio  String?  @default("1:1")

  // Image data (Supabase Storage URLs or legacy base64)
  sourceImage  String?  @db.Text
  resultImages String[] @default([]) // Array of Supabase Storage URLs

  // Organization
  tags         String[] @default([]) // User-defined tags for search and filtering

  // Status
  status       String   @default("draft") // 'draft', 'completed', 'shared'
  deletedAt    DateTime?

  // Relations
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

// ApiKey - Encrypted user API keys for Gemini
model ApiKey {
  id            String   @id @default(cuid())
  userId        String   @unique
  encryptedKey  String   @db.Text

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// UsageStats - User usage tracking and cost estimation
model UsageStats {
  id             String   @id @default(cuid())
  userId         String   @unique
  totalImages    Int      @default(0)
  totalCostUsd   Decimal  @default(0.00) @db.Decimal(10, 2)
  todayUsage     Int      @default(0)
  lastUsageDate  DateTime?
  history        Json     @default("[]") // [{date: "2024-11-25", count: 10}, ...]

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  updatedAt      DateTime @updatedAt
}

// GenerationHistory - AI generation audit trail
model GenerationHistory {
  id            String   @id @default(cuid())
  userId        String
  projectId     String?
  mode          String   // 'CREATE', 'EDIT', 'DETAIL_PAGE', 'DETAIL_EDIT'
  prompt        String?  @db.Text
  category      String?
  style         String?
  imageCount    Int      @default(1)
  costUsd       Decimal  @db.Decimal(10, 2)
  status        String   // 'success', 'failed'
  errorMessage  String?  @db.Text

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
  @@index([status])
}

// ========================================
// ReBAC Permission System
// ========================================

// RelationTuple - Core permissions table
model RelationTuple {
  id          String @id @default(cuid())

  namespace   String // 'image_project', 'system'
  objectId    String // Resource ID
  relation    String // 'owner', 'editor', 'viewer'
  subjectType String // 'user'
  subjectId   String // User ID

  createdAt DateTime @default(now())

  @@unique([namespace, objectId, relation, subjectType, subjectId])
  @@index([namespace, objectId, relation])
  @@index([subjectType, subjectId])
  @@index([namespace, relation, subjectId])
}

// RelationDefinition - Permission inheritance rules
model RelationDefinition {
  id        String   @id @default(cuid())
  namespace String   // 'image_project'
  relation  String   // 'owner', 'editor', 'viewer'
  inherits  String[] @default([]) // Array of inherited relations

  createdAt DateTime @default(now())

  @@unique([namespace, relation])
}

// ========================================
// DetailPageDraft - Save work-in-progress detail page builder
// ========================================

model DetailPageDraft {
  id                  String   @id @default(cuid())
  userId              String
  title               String   // User-defined draft name

  // Builder state
  selectedCategoryId  String?  // Category ID from DETAIL_PAGE_CATEGORIES
  selectedStyleId     String?  // Style ID
  selectedLayoutId    String?  // Layout ID
  prompt              String?  @db.Text  // Current prompt text

  // Images
  uploadedImage       String?  @db.Text  // Main product image URL
  refImage            String?  @db.Text  // Reference image URL

  // Generated sections (array of image URLs)
  detailPageSegments  String[] @default([])

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([userId])
  @@index([updatedAt])
}

// ========================================
// Credit System (Server-managed Vertex AI Billing)
// ========================================

// Credit - User credit balance
model Credit {
  id        String   @id @default(cuid())
  userId    String   @unique
  balance   Int      @default(0) // 크레딧 잔액 (1 크레딧 = ₩100)

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

// CreditTransaction - Credit usage/purchase history
model CreditTransaction {
  id          String   @id @default(cuid())
  userId      String
  amount      Int      // 양수: 충전/보너스, 음수: 사용
  type        String   // 'PURCHASE', 'BONUS', 'REFERRAL', 'GENERATION', 'UPSCALE'
  description String?  @db.Text
  metadata    Json?    // 결제 정보, 이미지 생성 정보 등 (해상도, 생성 수량 등)

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())

  @@index([userId, createdAt])
  @@index([type])
  @@index([createdAt])
}

// ========================================
// Subscription (Storage & Feature Access)
// ========================================

model Subscription {
  id              String    @id @default(cuid())
  userId          String    @unique
  tier            String    @default("FREE") // 'FREE', 'PLUS', 'PRO', 'ENTERPRISE'
  status          String    @default("ACTIVE") // 'ACTIVE', 'CANCELLED', 'EXPIRED', 'PAUSED'

  // 티어별 혜택
  storageQuotaGB  Int       @default(1) // 저장 공간 (GB)
  concurrentLimit Int       @default(1) // 동시 생성 제한
  watermarkFree   Boolean   @default(false) // 워터마크 제거 여부
  priorityQueue   Boolean   @default(false) // 우선 처리 여부

  // 구독 기간
  startDate       DateTime  @default(now())
  endDate         DateTime? // null이면 무기한 (FREE 티어)
  cancelledAt     DateTime?

  // 결제 정보 (외부 결제 시스템 ID)
  paymentProvider String?   // 'TOSS', 'STRIPE', 'MANUAL'
  externalId      String?   // 외부 결제 시스템의 구독 ID

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([userId])
  @@index([status])
  @@index([tier])
  @@index([endDate])
}

// ========================================
// Referral System
// ========================================

// Referral - Track referral relationships and reward status
model Referral {
  id             String    @id @default(cuid())
  referrerId     String    // 추천인 ID
  referredId     String    // 가입자 ID
  status         String    @default("PENDING") // 'PENDING', 'COMPLETED'
  creditsAwarded Boolean   @default(false) // 크레딧 지급 완료 여부
  awardedAt      DateTime? // 크레딧 지급 시각

  // Relations
  referrer       User      @relation("Referrer", fields: [referrerId], references: [id], onDelete: Cascade)
  referred       User      @relation("Referred", fields: [referredId], references: [id], onDelete: Cascade)

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@unique([referrerId, referredId])
  @@index([referrerId])
  @@index([referredId])
  @@index([status])
  @@index([creditsAwarded])
}
