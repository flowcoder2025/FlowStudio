generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id                                 String              @id @default(cuid())
  name                               String?
  email                              String?             @unique
  emailVerified                      DateTime?
  image                              String?
  createdAt                          DateTime            @default(now())
  updatedAt                          DateTime            @updatedAt
  businessNumber                     String?             @unique
  businessOwnerName                  String?
  businessPhone                      String?
  businessVerified                   Boolean             @default(false)
  businessVerifiedAt                 DateTime?
  businessBonusClaimed               Boolean             @default(false)
  referralCode                       String?             @unique @default(cuid())
  referredBy                         String?
  creditBalance                      Int                 @default(0)
  paddleCustomerId                   String?             @unique
  paddleSubscriptionId               String?             @unique
  subscriptionEndDate                DateTime?
  subscriptionStartDate              DateTime?
  subscriptionStatus                 String              @default("ACTIVE")
  subscriptionTier                   String              @default("FREE")
  accounts                           Account[]
  ApiKey                             ApiKey?
  credits                            Credit?
  transactions                       CreditTransaction[]
  GenerationHistory                  GenerationHistory[]
  imageProjects                      ImageProject[]
  Referral_Referral_referredIdToUser Referral[]          @relation("Referral_referredIdToUser")
  Referral_Referral_referrerIdToUser Referral[]          @relation("Referral_referrerIdToUser")
  sessions                           Session[]
  subscriptions                      Subscription?
  UsageStats                         UsageStats?

  @@index([businessNumber])
}

model Credit {
  id        String   @id @default(cuid())
  userId    String   @unique
  balance   Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model CreditTransaction {
  id              String    @id @default(cuid())
  userId          String
  amount          Int
  type            String
  description     String?
  metadata        Json?
  createdAt       DateTime  @default(now())
  expiresAt       DateTime?
  remainingAmount Int?
  paymentId       String?
  paymentProvider String?
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([expiresAt])
  @@index([paymentId])
  @@index([type])
  @@index([userId, createdAt])
}

model CreditLedger {
  id                String           @id @default(cuid())
  userId            String
  workflowSessionId String?
  requestId         String           @unique
  holdAmount        Int
  capturedAmount    Int?
  refundedAmount    Int?
  status            String           @default("HELD")
  heldAt            DateTime         @default(now())
  capturedAt        DateTime?
  refundedAt        DateTime?
  expiresAt         DateTime
  description       String?
  metadata          Json?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime
  WorkflowSession   WorkflowSession? @relation(fields: [workflowSessionId], references: [id])

  @@index([userId])
  @@index([expiresAt])
  @@index([requestId])
  @@index([status])
  @@index([workflowSessionId])
}

model RelationTuple {
  id          String   @id @default(cuid())
  namespace   String
  objectId    String
  relation    String
  subjectType String
  subjectId   String
  createdAt   DateTime @default(now())

  @@unique([namespace, objectId, relation, subjectType, subjectId])
  @@index([namespace, objectId, relation])
  @@index([namespace, relation, subjectId])
  @@index([subjectType, subjectId])
}

model WorkflowSession {
  id             String         @id @default(cuid())
  userId         String
  workflowId     String
  industryId     String
  actionId       String
  schemaVersion  String
  currentStep    Int            @default(0)
  totalSteps     Int
  stepData       Json           @default("{}")
  status         String         @default("IN_PROGRESS")
  completedAt    DateTime?
  requestedCount Int?
  returnedCount  Int?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  CreditLedger   CreditLedger[]
  imageProjects  ImageProject[]

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([workflowId])
}

model ImageProject {
  id                String           @id @default(cuid())
  userId            String
  title             String
  description       String?
  mode              String
  prompt            String?
  category          String?
  style             String?
  aspectRatio       String?          @default("1:1")
  sourceImage       String?
  resultImages      String[]         @default([])
  status            String           @default("draft")
  deletedAt         DateTime?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  tags              String[]         @default([])
  actionId          String?
  industryId        String?
  requestedCount    Int?
  returnedCount     Int?
  workflowId        String?
  workflowSessionId String?
  user              User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  workflowSession   WorkflowSession? @relation(fields: [workflowSessionId], references: [id])

  @@index([userId])
  @@index([workflowSessionId])
  @@index([createdAt])
  @@index([industryId])
  @@index([status])
}

model Subscription {
  id              String    @id @default(cuid())
  userId          String    @unique
  tier            String    @default("FREE")
  status          String    @default("ACTIVE")
  storageQuotaGB  Int       @default(1)
  concurrentLimit Int       @default(1)
  watermarkFree   Boolean   @default(false)
  priorityQueue   Boolean   @default(false)
  startDate       DateTime  @default(now())
  endDate         DateTime?
  cancelledAt     DateTime?
  paymentProvider String?
  externalId      String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([endDate])
  @@index([tier])
}

model ApiKey {
  id           String   @id
  userId       String   @unique
  encryptedKey String
  createdAt    DateTime @default(now())
  updatedAt    DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ConcurrencySlot {
  id        String   @id
  userId    String
  requestId String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([expiresAt])
  @@index([userId, expiresAt])
  @@index([userId])
}

model DetailPageDraft {
  id                 String   @id
  userId             String
  title              String
  selectedCategoryId String?
  selectedStyleId    String?
  selectedLayoutId   String?
  prompt             String?
  uploadedImage      String?
  refImage           String?
  detailPageSegments String[] @default([])
  createdAt          DateTime @default(now())
  updatedAt          DateTime

  @@index([updatedAt])
  @@index([userId])
}

model GenerationHistory {
  id                String   @id
  userId            String
  projectId         String?
  mode              String
  prompt            String?
  category          String?
  style             String?
  imageCount        Int      @default(1)
  costUsd           Decimal  @db.Decimal(10, 2)
  status            String
  errorMessage      String?
  createdAt         DateTime @default(now())
  fallbackUsed      Boolean  @default(false)
  providerChain     String[] @default([])
  requestedCount    Int?
  returnedCount     Int?
  workflowSessionId String?
  User              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([status])
  @@index([userId])
  @@index([workflowSessionId])
}

model Referral {
  id                             String    @id
  referrerId                     String
  referredId                     String
  status                         String    @default("PENDING")
  creditsAwarded                 Boolean   @default(false)
  awardedAt                      DateTime?
  createdAt                      DateTime  @default(now())
  updatedAt                      DateTime
  User_Referral_referredIdToUser User      @relation("Referral_referredIdToUser", fields: [referredId], references: [id], onDelete: Cascade)
  User_Referral_referrerIdToUser User      @relation("Referral_referrerIdToUser", fields: [referrerId], references: [id], onDelete: Cascade)

  @@unique([referrerId, referredId])
  @@index([creditsAwarded])
  @@index([referredId])
  @@index([referrerId])
  @@index([status])
}

model RelationDefinition {
  id        String   @id
  namespace String
  relation  String
  inherits  String[] @default([])
  createdAt DateTime @default(now())

  @@unique([namespace, relation])
}

model UsageStats {
  id            String    @id
  userId        String    @unique
  totalImages   Int       @default(0)
  totalCostUsd  Decimal   @default(0.00) @db.Decimal(10, 2)
  todayUsage    Int       @default(0)
  lastUsageDate DateTime?
  history       Json      @default("[]")
  updatedAt     DateTime
  User          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model WorkflowSchemaVersion {
  id             String    @id
  version        String    @unique
  schemaHash     String
  isActive       Boolean   @default(true)
  deprecatedAt   DateTime?
  content        Json
  migratesFrom   String?
  migrationNotes String?
  createdAt      DateTime  @default(now())

  @@index([isActive])
  @@index([version])
}
